    <update id="updateOrderListStatue" parameterType="java.util.List">
        UPDATE tb_order
        SET order_state = CASE order_id
        <foreach collection="list" item="item">
            WHEN #{item.orderId} THEN #{item.orderState}
        </foreach>
        END, modified_user = CASE order_id
        <foreach collection="list" item="item">
