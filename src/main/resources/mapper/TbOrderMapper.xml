      c.goods_price,
      d.goods_id,
      d.goods_order_id,
      d.order_id,
      d.num,
      d.total_price
  FROM
      tb_order a,
      tb_receiver b,
      tb_goods c,
      tb_goods_order d
  WHERE
      a.order_id = d.order_id
  AND d.goods_id = c.goods_id
  AND a.order_id = b.order_id
